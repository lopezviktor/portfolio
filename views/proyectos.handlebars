<section id="proyectos">
    
    <h1 class="title">Nuestros Proyectos</h1>
    
    <div class="proyecto-lista">
        {{#each proyectos}}
        <div class="proyecto">
            <h2 class="proyecto-titulo">{{titulo}}</h2>
            <p class="proyecto-descripcion">{{descripcion}}</p>
            <p><strong>Cliente:</strong> {{cliente}}</p>
            <p><strong>Tecnolog√≠as:</strong></p>
            <div class="proyecto-tecnologias">
                {{#each tecnologias}}
                <div class="proyecto-tecnologia-item">
                    <img src="/images/logos/{{this.id}}.png" alt="{{this.nombre}}" class="proyecto-tech-logo">
                    <span>{{this.nombre}}</span>
                </div>
                {{/each}}
            </div>
            <p><strong>Fecha:</strong> {{formatearFecha diaInicio}} - {{formatearFecha diaFin}}</p>
        </div>
        {{/each}}
    </div>

    <div class="logo-container">
        <img src="/images/Proyectos.png" alt="Proyectos" >
    </div>

</section>